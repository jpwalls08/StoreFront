@model IEnumerable<StoreFront.DATA.EF.Models.OrderEquipment>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EquipmentPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Equipment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EquipmentPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Equipment.EquipmentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Order.ShipCity)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.OrderEquipmentId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.OrderEquipmentId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.OrderEquipmentId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
